DIR="foo"
[ -d "$DIR" ] && echo "Found"

[ -d "/path/dir/" ] && echo "Directory /path/dir/ exists."
[ ! -d "/dir1/" ] && echo "Directory /dir1/ DOES NOT exists."


d="$1"
[ "$d" == "" ] && { echo "Usage: $0 directory"; exit 1; }
[ -d "${d}" ] &&  echo "Directory $d found." || echo "Directory $d not found."
